{
  "name": "nairobi-verified-backend",
  "version": "1.0.0",
  "description": "Backend for Nairobi Verified marketplace",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node seeder.js",
    "seed:enhanced": "node scripts/seedEnhancedData.js",
    "seed:flash-sales": "node seeders/flashSalesSeeder.js",
    "seed:enhanced-flash-sales": "node seeders/enhancedFlashSalesSeeder.js",
    "test": "cross-env NODE_ENV=test MONGODB_URI=mongodb://localhost:27017/nairobi-verified-test jest --coverage --runInBand",
    "test:watch": "cross-env NODE_ENV=test MONGODB_URI=mongodb://localhost:27017/nairobi-verified-test jest --watch --runInBand",
    "test:auth": "cross-env NODE_ENV=test MONGODB_URI=mongodb://localhost:27017/nairobi-verified-test jest tests/auth.test.js --verbose",
    "test:products": "cross-env NODE_ENV=test MONGODB_URI=mongodb://localhost:27017/nairobi-verified-test jest tests/products.test.js --verbose",
    "test:reviews": "cross-env NODE_ENV=test MONGODB_URI=mongodb://localhost:27017/nairobi-verified-test jest tests/reviews.test.js --verbose",
    "test:merchants": "cross-env NODE_ENV=test MONGODB_URI=mongodb://localhost:27017/nairobi-verified-test jest tests/merchants.test.js --verbose",
    "test:ci": "cross-env NODE_ENV=test jest --ci --coverage --maxWorkers=1",
    "test:coverage": "cross-env NODE_ENV=test MONGODB_URI=mongodb://localhost:27017/nairobi-verified-test jest --coverage --coverageReporters=text-summary"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "compression": "^1.8.1",
    "connect-mongo": "^5.1.0",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^6.10.0",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "google-auth-library": "^10.2.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^6.9.4",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "prom-client": "^15.1.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "create-jest": "^30.0.5",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemailer-stub": "^1.2.2",
    "nodemon": "^3.0.1",
    "sinon": "^15.2.0",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
